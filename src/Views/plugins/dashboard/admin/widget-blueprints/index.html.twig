{% extends 'admin/index.html.twig' %}

{% block content %}
  <div class="row">
    <div class="col-md-12">
      <div class="pull-right">
        <a class="btn btn-primary" href="{{ path('admin_plugins_dashboard_widget_blueprints_new') }}">
          <i class="fa fa-plus"></i>&nbsp;
          {{ 'plugins.dashboard.admin.widgets.add_widget'|trans }}
        </a>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="table-responsive">
        <table class="table table-hovered">
          <thead>
            <tr>
              <th>{{ 'plugins.dashboard.admin.widgets.name'|trans }}</th>
              <th>{{ 'plugins.dashboard.admin.widgets.description'|trans }}</th>
              <th>{{ 'plugins.dashboard.admin.widgets.url'|trans }}</th>
              <th>{{ 'plugins.dashboard.admin.widgets.actions'|trans }}</th>
            </tr>
          </thead>
          <tbody>
            {% for widget in entities %}
              <tr>
                <td>{{widget.name}}</td>
                <td>{{widget.description}}</td>
                <td>{{widget.url}}</td>
                <td>
                  {% if widget.id is defined %}
                    <a href="{{ path('admin_plugins_dashboard_widget_blueprints_edit', {'entityId': page.id}) }}"
                      class="btn btn-primary btn-xs">{{ 'plugins.dashboard.admin.widgets.edit_widget'|trans }}</a>
                  {% else %}
                    <span title="{{'plugins.dashboard.admin.widgets.system_widget_help'|trans}}" class="fa fa-question-circle"></span> <i>{{'plugins.dashboard.admin.widgets.system_widget'|trans}}</i>
                  {% endif %}
                </td>
              </tr>
            {% endfor %}
          </body>
        </table>
      </div>
    </div>
  </div>
{% endblock %}
