<div class="col-md-{{widget.columnWidth}}">
  <div class="panel panel-default karambol-widget-panel">
    <div class="panel-heading">
      <h4 class="panel-title">{{widget.label}}</h4>
    </div>
    <div class="panel-body">
      <iframe class="karambol-widget" src="{{widget.url}}"
        {% if widget.options is defined %}data-widget-options="{{widget.options|json_encode()|b64_encode()}}"{% endif %}
        {% if widget.height is defined %}style="height:{{widget.height}}px"{% endif %}>
      </iframe>
    </div>
  </div>
</div>
